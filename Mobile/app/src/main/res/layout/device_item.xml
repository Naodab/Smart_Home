<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="8dp">
    <data>
        <variable
            name="device"
            type="com.smarthome.mobile.model.Device" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F5F4F0">

        <ImageView
            android:id="@+id/device_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/icon_device"
            android:layout_margin="6dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="@{device.name}"
            android:textColor="@color/black"
            android:fontFamily="@font/minor_title"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/statuses_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="6dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/on_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:text="@string/on"
                android:textColor="@color/black"
                android:fontFamily="@font/abeezee"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/status_text_size"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/bg_selected_status"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/off_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:text="@string/off"
                android:textColor="@color/black"
                android:fontFamily="@font/abeezee"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/status_text_size"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/bg_status"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statuses_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="6dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/open_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:text="@string/open"
                android:textColor="@color/black"
                android:fontFamily="@font/abeezee"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/status_text_size"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/bg_selected_status"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:text="@string/close"
                android:textColor="@color/black"
                android:fontFamily="@font/abeezee"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/status_text_size"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/bg_status"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statuses_fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="6dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/off_fan_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:text="@string/fan_off"
                android:textColor="@color/black"
                android:fontFamily="@font/abeezee"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/status_text_size"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/bg_status"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/low_fan_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:text="@string/fan_low"
                android:textColor="@color/black"
                android:fontFamily="@font/abeezee"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/status_text_size"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/bg_selected_status"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/medium_fan_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:text="@string/fan_medium"
                android:textColor="@color/black"
                android:fontFamily="@font/abeezee"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/status_text_size"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/bg_status"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/high_fan_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:text="@string/fan_high"
                android:textColor="@color/black"
                android:fontFamily="@font/abeezee"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/status_text_size"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/bg_status"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/detail_btn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/detail"
            android:src="@drawable/ic_right"/>
    </LinearLayout>
</layout>